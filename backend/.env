# Backend Environment Variables
# Copy this file to .env in your backend directory and fill in your actual values

# ==============================================
# REQUIRED CONFIGURATION
# ==============================================

# Gemini AI API Key (Required)
# Get your API key from: https://makersuite.google.com/app/apikey
# This is required for AI-powered test case generation
GEMINI_API_KEY=AIzaSyAnSAnMyXxHtG0ThJzMurd3voFMZ69WYV4

# ==============================================
# SERVER CONFIGURATION
# ==============================================

# Server Port (default: 5000)
PORT=5000

# Environment (development, production, test)
NODE_ENV=development

# ==============================================
# CORS CONFIGURATION
# ==============================================

# Frontend URL for CORS (where your React app runs)
FRONTEND_URL=http://localhost:5173

# Additional allowed origins (comma-separated)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ==============================================
# SESSION CONFIGURATION
# ==============================================

# Session secret for secure session management
# Generate a strong random string for production
SESSION_SECRET=your_session_secret_here_change_in_production

# Session timeout in milliseconds (default: 1 hour)
# 3600000 = 1 hour, 864s00000 = 24 hours
SESSION_TIMEOUT=3600000

# ==============================================
# GITHUB OAUTH (OPTIONAL)
# ==============================================

# GitHub OAuth App credentials (optional, for enhanced GitHub integration)
# Create OAuth App at: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=Ov23liHWrVK6E2UkqGyH
GITHUB_CLIENT_SECRET=a66a5907cbca463047aac6131d103c4217a84277
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# ==============================================
# RATE LIMITING
# ==============================================

# API rate limiting (requests per window)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# AI generation rate limiting (requests per hour)
AI_RATE_LIMIT_REQUESTS=50
AI_RATE_LIMIT_WINDOW=3600000

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=true

# Log file path (optional, logs to console if not specified)
# LOG_FILE_PATH=./logs/app.log

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Enable HTTPS redirect in production (true/false)
FORCE_HTTPS=false

# Content Security Policy (optional)
# CSP_POLICY="default-src 'self'"

# ==============================================
# DATABASE CONFIGURATION (OPTIONAL)
# ==============================================

# If you want to add persistent storage later
# DATABASE_URL=postgresql://username:password@localhost:5432/testcasedb
# DATABASE_URL=mongodb://localhost:27017/testcasedb

# ==============================================
# EXTERNAL SERVICES (OPTIONAL)
# ==============================================

# Redis for session storage and caching (optional)
# REDIS_URL=redis://localhost:6379

# Email service for notifications (optional)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your.email@gmail.com
# EMAIL_PASS=your_email_password

# ==============================================
# MONITORING & ANALYTICS (OPTIONAL)
# ==============================================

# Application monitoring
# SENTRY_DSN=your_sentry_dsn_here

# Analytics tracking
# ANALYTICS_ID=your_analytics_id

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================

# Enable debug mode (additional logging and error details)
DEBUG=true

# Enable API documentation (swagger/openapi)
ENABLE_API_DOCS=true

# Mock AI responses for testing (true/false)
MOCK_AI_RESPONSES=false

# ==============================================
# PRODUCTION OVERRIDES
# ==============================================

# These will be set automatically in production environments
# Don't uncomment these in development

# NODE_ENV=production
# PORT=80
# FORCE_HTTPS=true
# DEBUG=false
# LOG_LEVEL=warn