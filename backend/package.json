{
  "name": "test-case-generator-backend",
  "version": "1.0.0",
  "description": "Backend API for AI Test Case Generator - Generate comprehensive test suites using AI",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "validate": "npm run lint && npm run test",
    "build": "echo 'No build step required for Node.js backend'",
    "heroku-postbuild": "echo 'Backend deployment complete'"
  },
  "keywords": [
    "test-case-generator",
    "ai",
    "testing",
    "github",
    "gemini-ai",
    "automation",
    "unit-tests",
    "integration-tests",
    "code-analysis"
  ],
  "author": {
    "name": "Lakshya Verma",
    "email": "lakshya123kl@gmail.com",
    "url": "https://github.com/LakshyaVerma123kl"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LakshyaVerma123kl/test-case-gen"
  },
  "bugs": {
    "url": "https://github.com/LakshyaVerma123kl/test-case-gen/issues"
  },
  "homepage": "https://github.com/LakshyaVerma123kl/test-case-gen#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@octokit/rest": "^20.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "node/no-unpublished-require": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/",
      "coverage/",
      "*.test.js"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json"
  }
}
